{
  "name": "go-node-dev",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "forwardPorts": [5173, 5174, 5175, 8080],
  "portsAttributes": {
    "5173": { "label": "BasaltPass User Console (Vite)" },
    "5174": { "label": "BasaltPass Tenant Console (Vite)" },
    "5175": { "label": "BasaltPass Admin Console (Vite)" },
    "8080": { "label": "BasaltPass Backend (Go/Fiber)" }
  },
  "features": {
    "ghcr.io/devcontainers/features/go:1": {
      "version": "1.22"
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20"
    }
  },
  "postCreateCommand": "corepack enable",
  "remoteEnv": {
    "GOROOT": ""
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "golang.go",
        "dbaeumer.vscode-eslint"
      ]
    }
  }
}

