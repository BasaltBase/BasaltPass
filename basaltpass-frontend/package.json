{
  "name": "basaltpass-frontend",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "npm run dev:user",
    "dev:user": "npm run -w @basaltpass/console-user dev",
    "dev:tenant": "npm run -w @basaltpass/console-tenant dev",
    "dev:admin": "npm run -w @basaltpass/console-admin dev",
    "build": "npm run build:user && npm run build:tenant && npm run build:admin",
    "build:user": "npm run -w @basaltpass/console-user build",
    "build:tenant": "npm run -w @basaltpass/console-tenant build",
    "build:admin": "npm run -w @basaltpass/console-admin build",
    "preview:user": "npm run -w @basaltpass/console-user preview",
    "preview:tenant": "npm run -w @basaltpass/console-tenant preview",
    "preview:admin": "npm run -w @basaltpass/console-admin preview"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "axios": "^1.6.7",
    "clsx": "^2.1.1",
    "lucide-react": "^0.525.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.23.0"
  },
  "devDependencies": {
    "@types/node": "^24.1.0",
    "@types/react": "^18.2.14",
    "@types/react-dom": "^18.2.6",
    "@types/react-router-dom": "^5.3.3",
    "@vitejs/plugin-react": "^4.1.0",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.3.2",
    "vite": "^5.1.0"
  }
}
