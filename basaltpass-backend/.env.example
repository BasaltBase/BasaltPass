# BasaltPass Backend Environment Variables
# Copy this file to .env and fill in your actual values

# JWT Secret for authentication
JWT_SECRET=your-jwt-secret-here

# Email Configuration
# Choose one provider: smtp, aws_ses, brevo, mailgun
BASALTPASS_EMAIL_PROVIDER=smtp

# ============================================
# SMTP Configuration
# ============================================
# For Gmail: smtp.gmail.com (requires app-specific password)
# For Outlook: smtp.office365.com
# For self-hosted: your-smtp-server.com
BASALTPASS_EMAIL_SMTP_HOST=smtp.gmail.com
BASALTPASS_EMAIL_SMTP_PORT=587
BASALTPASS_EMAIL_SMTP_USERNAME=your-email@gmail.com
BASALTPASS_EMAIL_SMTP_PASSWORD=your-app-password
BASALTPASS_EMAIL_SMTP_USE_TLS=true
BASALTPASS_EMAIL_SMTP_USE_SSL=false

# ============================================
# AWS SES Configuration
# ============================================
# Uncomment these lines if using AWS SES
# BASALTPASS_EMAIL_PROVIDER=aws_ses
# BASALTPASS_EMAIL_AWS_SES_REGION=us-east-1
